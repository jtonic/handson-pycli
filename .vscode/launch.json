{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Pycli",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main/pycli/main.py",
            "args": [
                "hello",
                "--count=3",
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Pycli (produce-message)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main/pycli/main.py",
            "args": [
                "produce-message",
                "--templates-dir=${workspaceFolder}/templates",
                "--template-file=index.html.j2",
            ],
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest"
        },
    ]
}